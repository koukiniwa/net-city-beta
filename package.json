  "description": "**みんながつながる仮想の街 - リアルタイムチャットアプリ**",
  "main": "service-worker.js",
  "scripts": {
    "build:www": "bash scripts/build-www.sh",
    "sync": "npm run build:www && npx cap sync",
    "sync:android": "npm run build:www && npx cap sync android",
    "sync:ios": "npm run build:www && npx cap sync ios",
    "open:android": "npx cap open android",
    "open:ios": "npx cap open ios",
    "build": "npm run sync",
    "assets": "npx capacitor-assets generate --iconBackgroundColor '#0a0e27' --splashBackgroundColor '#0a0e27'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
